# Production Environment Configuration Template
# Copy this file to .env and configure for your environment

# ============================================================================
# AWS CONFIGURATION
# ============================================================================
AWS_REGION=us-west-2
AWS_ACCOUNT_ID=your-account-id
EKS_CLUSTER_NAME=medical-ai-cluster
ECR_REPOSITORY_NAME=medical-image-training
S3_BUCKET_NAME=medical-ai-data-bucket

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# Use AWS Secrets Manager ARNs for production
DB_PASSWORD_SECRET_ARN=arn:aws:secretsmanager:us-west-2:123456789012:secret:medical-db-password
API_KEY_SECRET_ARN=arn:aws:secretsmanager:us-west-2:123456789012:secret:medical-api-key
MODEL_ENCRYPTION_KEY_ARN=arn:aws:secretsmanager:us-west-2:123456789012:secret:model-encryption-key

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=4

# Model Configuration
MODEL_VERSION=v1.0.0
BATCH_SIZE=32
MAX_IMAGE_SIZE=4096
SUPPORTED_FORMATS=DICOM,PNG,JPEG,TIFF

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://username:password@rds-endpoint:5432/medical_ai
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
ALERT_WEBHOOK_URL=https://your-slack-webhook-url

# ============================================================================
# TRITON INFERENCE SERVER
# ============================================================================
TRITON_HOST=triton-inference
TRITON_HTTP_PORT=8000
TRITON_GRPC_PORT=8001
TRITON_METRICS_PORT=8002
MODEL_REPOSITORY=/models

# ============================================================================
# KUBERNETES CONFIGURATION
# ============================================================================
NAMESPACE=medical-training
REPLICAS_MIN=2
REPLICAS_MAX=10
CPU_REQUEST=2
CPU_LIMIT=4
MEMORY_REQUEST=8Gi
MEMORY_LIMIT=16Gi
GPU_REQUEST=1

# ============================================================================
# DATA PROCESSING
# ============================================================================
DATA_UPLOAD_LIMIT=100MB
PARALLEL_WORKERS=8
PREPROCESSING_QUEUE_SIZE=1000
VALIDATION_ENABLED=true

# ============================================================================
# COMPLIANCE & AUDIT
# ============================================================================
AUDIT_LOGGING=true
PHI_PROTECTION=true
GDPR_COMPLIANCE=true
RETENTION_DAYS=2557  # 7 years for medical data
BACKUP_RETENTION_DAYS=90

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
TORCH_NUM_THREADS=4
OMP_NUM_THREADS=4
CUDA_VISIBLE_DEVICES=0,1,2,3
MIXED_PRECISION=true
OPTIMIZATION_LEVEL=O2